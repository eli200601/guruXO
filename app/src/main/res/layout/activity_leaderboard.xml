<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.elisoft.guru.Activity.LeaderBoardActivity"
    app:theme="@style/AppTheme.NoTitleHeader"
    android:orientation="vertical"
    android:weightSum="4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:text="User Name"
            android:textColor="@color/colorPrimaryText"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/exit_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/logout_icon"
            android:layout_margin="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <ImageView
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:paddingTop="10dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:src="@drawable/logo2"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"

        android:orientation="vertical"
        android:background="@color/colorAccent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/medal_first_place"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/first_place_medal"/>

            <ImageView
                android:id="@+id/icon_user_first_place"
                android:layout_width="@dimen/user_icon_size_larger"
                android:layout_height="@dimen/user_icon_size_larger"
                android:layout_below="@+id/medal_first_place"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/profile_icon"/>

            <TextView
                android:id="@+id/user_name_first_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_user_first_place"
                android:text="User Name"
                android:textColor="@color/colorPrimaryText"
                android:textSize="18dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/first_place_win_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_name_first_place"
                android:text="Wins: 45"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/first_place_lose_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/first_place_win_status"
                android:text="Loses: 23"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/first_place_draw_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/first_place_lose_status"
                android:text="Draws: 3"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/medal_second_place"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/medal_second"/>

            <ImageView
                android:id="@+id/icon_user_second_place"
                android:layout_width="@dimen/user_icon_size"
                android:layout_height="@dimen/user_icon_size"
                android:layout_below="@+id/medal_second_place"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/profile_icon"/>

            <TextView
                android:id="@+id/user_name_second_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_user_second_place"
                android:text="User Name"
                android:textColor="@color/colorPrimaryText"
                android:textSize="18dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/second_place_win_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_name_second_place"
                android:text="Wins: 45"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/second_place_lose_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/second_place_win_status"
                android:text="Loses: 23"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/second_place_draw_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/second_place_lose_status"
                android:text="Draws: 3"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/medal_third_place"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/medal_third"/>

            <ImageView
                android:id="@+id/icon_user_third_place"
                android:layout_width="@dimen/user_icon_size"
                android:layout_height="@dimen/user_icon_size"
                android:layout_below="@+id/medal_third_place"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/profile_icon"/>

            <TextView
                android:id="@+id/user_name_third_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/icon_user_third_place"
                android:text="User Name"
                android:textColor="@color/colorPrimaryText"
                android:textSize="18dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/third_place_win_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_name_third_place"
                android:text="Wins: 45"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/third_place_lose_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/third_place_win_status"
                android:text="Loses: 23"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/third_place_draw_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/third_place_lose_status"
                android:text="Draws: 3"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>
        


    </RelativeLayout>

</LinearLayout>
