<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.elisoft.guru">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoTitleHeader">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Activity.LoginActivity"
            android:label="Login to Guru"
            />

        <activity
            android:name="com.app.elisoft.guru.Dialogs.InviteDialog"
            android:label="Invite Player"
            android:theme="@style/AppTheme.Transparent"
            />

        <activity
            android:name="com.app.elisoft.guru.Dialogs.GotInviteDialog"
            android:label="Invited Player"
            android:theme="@style/AppTheme.Transparent"
            />

        <activity
            android:name="com.app.elisoft.guru.Activity.GameActivity"
            android:label="Game Room"
            android:theme="@style/AppTheme.NoTitleHeader"
            />

        <service
            android:name="com.app.elisoft.guru.Services.UpdateUserState"
            android:label="Intent"
            android:exported="false"
            android:enabled="true"/>

        <service
            android:name="com.app.elisoft.guru.Services.SendMessageToDevice"
            android:exported="false"
            android:label="Intent"
            android:enabled="true"/>

        <service
            android:name="com.app.elisoft.guru.Services.FBMessagingReceiverService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <receiver android:name=".BroadcastReceiver.AlarmReceiver"
            android:exported="false">
            <intent-filter>
                <action
                    android:name="com.app.elisoft.guru.START_ALARM"
                    android:exported="true" />
            </intent-filter>
        </receiver>


    </application>

</manifest>